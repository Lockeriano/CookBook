<div class='container wrapper'>
  <div class='row'>
    <div class='col-md-offset-3 col-md-6 col-md-offset-3'>
    <%= form_for @ingredient, url: {action: 'create'} do |i| %>
      <div class='form-group field-height'>
        <label for='name'>Name</label>
        <%= i.text_field :name, class: 'form-control' %>
        <span class='error-span'><%= @ingredient.errors[:name].join(', ') %></span>
      </div>
      <div class='form-group field-height'>
        <label for='unit type'>Unit type</label>
        <%= i.text_field :unit_type, class: 'form-control' %>
        <span class='error-span'><%= @ingredient.errors[:unit_type].join(', ') %></span>
      </div>
      <%= i.submit 'Save' %>
    <% end %>
    </div>
  </div>
</div>
