<div class='container wrapper'>
  <div class='row'>
    <div class='col-md-offset-3 col-md-6 col-md-offset-3'>
      <%= form_for @user do |form| %>
        <div class='form-group field-height'>
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
          <span class='error-span'><%= @user.errors[:name].join(', ') %></span>
        </div>
        <div class='form-group field-height'>
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control' %>
          <span class='error-span'><%= @user.errors[:email].join(', ') %></span>
        </div>
        <div class='form-group field-height'>
          <%= form.label :password %>
          <%= form.password_field :password %></br>
          <span class="error-span"><%= @user.errors[:password].join(', ') %></span>
        </div>
        <div class='form-group field-height'>
          <%= form.label :password_confirmation, "Confirmation" %>
          <%= form.password_field :password_confirmation %></br>
          <span class="error-span"><%= @user.errors[:password_confirmation].join(', ') %></span>
        </div>

        <%= form.submit "Save", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
