<div class='container wrapper'>
  <div class='row'>
    <div class='col-md-offset-3 col-md-6 col-md-offset-3'>
      <%= form_for(@recipe, url: recipe_path) do |i| %>
      <div class='form-group'>
        <label for='name'>Name</label>
        <%= i.text_field :name, class: 'form-control' %>
        <span class='error-span'><%= @recipe.errors[:name].join(', ') %></span>
      </div>
      <div class='form-group'>
        <label for='instructions'>Instructions</label>
        <%= i.text_field :instructions, class: 'form-control' %>
        <span class='error-span'><%= @recipe.errors[:unit_type].join(', ') %></span>
      </div>
    </div>
  </div>
  <label for='recipe_ingredients'>Ingredients</label>
  <div class="row">
    <div class="col-lg-12">
      <%= i.fields_for :ingredients, @recipe.ingredients.each do |ing| %>
        <%= ing.fields_for :recipe_ingredients, @recipe.recipe_ingredients.each do |rec_ing| %>
      <li>
        <%= ing.text_field :name %>
          <%= rec_ing.text_field :unit_amount %>
        <%= ing.text_field :unit_type, disabled: true %>
      </li>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= i.submit 'Save' %>
<% end %>
</div>
