<div class='container text-center'>
  <div class='row'>
    <%= form_for @recipe do |f| %>
    <div class='col-md-12 margin-top-btm'>
      <div class='recipe-form-height'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_message_on :name %>
      </div>
      <div class='recipe-form-height'>
        <%= f.label :instructions %>
        <%= f.text_area :instructions, class: 'form-control' %>
        <%= f.error_message_on :instructions %>
      </div>
    </div>
    <div class='col-md-12 margin-top-btm'>
      <%= f.label :ingridients %>: </br></br>
      <%= f.fields_for :recipe_ingridients do |rec_ing_form| %>
        <%= rec_ing_form.fields_for :ingridient do |ing_form| %>
      <div class='row ingridient-form-height'>
        <div class='col-lg-3'>
          <%= ing_form.text_field :name, class: 'form-control' %>
          <%= ing_form.error_message_on :name %>
        </div>
        <div class='col-lg-3'>
          <%= rec_ing_form.text_field :unit_amount, class: 'form-control' %>
          <%= rec_ing_form.error_message_on :unit_amount %>
        </div>
        <div class='col-lg-3'>
          <%= ing_form.text_field :unit_type, class: 'form-control' %>
          <%= ing_form.error_message_on :unit_type %>
        </div>
        <div class='col-lg-2 delete-ingridient-line-height'>
          <label><%= rec_ing_form.check_box :_destroy %> delete ingridient</label>
        </div>
      </div>
      <% end %>
    <% end %>
    </div>
  </div>
    <%= f.submit 'submit', class: 'btn btn-primary', type: 'submit' %>
  <% end %>
</div>
