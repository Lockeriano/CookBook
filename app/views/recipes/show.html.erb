<div class="container text-center">
  <div class="row">
    <div class="col-md-6">
      <div class="recipe-img-box">
        <%= image_tag @recipe.image.url(:thumbnail) %>
        <h1 class="recipe-name"><%= @recipe.name %></h1>
      </div>
      <table class="table table-sm">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Amount</th>
            <th scope='col'></th>
          </tr>
        </thead>
        <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
        <tbody>
          <tr>
            <td><%= recipe_ingredient.name %></td>
            <td><%= recipe_ingredient.unit_amount %> <%= recipe_ingredient.unit_type %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-md-6">
      <div class="desc-box">
        <h2>Description</h2>
        <p><%= @recipe.instructions %></p>
      </div>
    </div>
  </div>
  <% if can? :update, @recipe %>
    <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-primary", type: "edit" %>
  <% end %>
</div>
