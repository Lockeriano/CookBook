<div class="nested-fields">
  <div class='input-group'>
    <label for='ingredient_name'>
    <%= recipe_ingredient_fields.collection_select(:ingredient_id, Ingredient.all, :id, :name_with_unit_type) %>
    <p class='error-span'><%= recipe_ingredient_fields.errors_for(:recipe_id) %></p>
  </div>
  <div class='input-group'>
    <label for='unit_amount'>
    <%= recipe_ingredient_fields.text_field :unit_amount %>
    <p class='error-span'><%= recipe_ingredient_fields.errors_for(:unit_amount) %></p>
  </div>
  <%= link_to_remove_association "-", recipe_ingredient_fields, class: 'btn btn-danger' %>
</div>
